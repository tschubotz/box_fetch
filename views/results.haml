-# encoding: utf-8
- if data
  %table.table.table-striped
    %th
    %th
      Title
    %th
      Owner
    %th
      Size
    - data.each do |id, user|
      - unless user.empty?
        - user["results"].each do |entry|
          %tr
            %td{style: "vertical-align: middle;"}
              - if entry["type"] == "file"
                %i{class: "icon-file"}
              - else
                %i{class: "icon-folder-close"}
            %td{style: "vertical-align: middle;"}
              %a{target: "_blank", href: "/request_access/#{user["user_id"]}/#{entry["id"]}/#{entry["name"]}"}= entry["name"]
            %td{style: "vertical-align: middle;"}
              %img{title: user["name"], src: user["avatar_url"]}
            %td{style: "vertical-align: middle;"}
              = "#{(entry["size"].to_f / 1024).round(2)} kB"

